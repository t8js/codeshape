{
  "name": "codeshape",
  "version": "3.0.6",
  "description": "Code postprocessing utility: typecheck, lint, format, compile, emit types",
  "type": "module",
  "bin": {
    "codeshape": "dist/run.js"
  },
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "compile": "npx esbuild ./src/run.ts --bundle --outdir=dist --platform=node --format=esm",
    "preversion": "npx npm-run-all clean compile update-dist shape",
    "shape": "node dist/run.js --no-compile",
    "update-dist": "node src/scripts/updateDist.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/codeshape.git"
  },
  "keywords": [
    "code style",
    "lint"
  ],
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "22.15.3"
  },
  "dependencies": {
    "@t8/date-format": "^1.0.14",
    "@typescript/native-preview": "^7.0.0-dev.20251208.1",
    "tsdown": "^0.17.2",
    "typescript": "^5.9.3"
  }
}

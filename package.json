{
  "name": "codeshape",
  "version": "2.4.6",
  "description": "Code checking utility: typecheck + lint + format",
  "type": "module",
  "bin": {
    "codeshape": "dist/run.js"
  },
  "scripts": {
    "build": "npx npm-run-all clean build-bin build-config",
    "build-bin": "npx esbuild ./src/run.ts --bundle --outdir=dist --platform=node --format=esm",
    "build-config": "node src/scripts/init.ts",
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all build shape",
    "shape": "node dist/run.js --typecheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/codeshape.git"
  },
  "keywords": [
    "code style",
    "lint"
  ],
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "22.15.3"
  },
  "dependencies": {
    "@t8/date-format": "^1.0.14",
    "@typescript/native-preview": "^7.0.0-dev.20251208.1"
  }
}

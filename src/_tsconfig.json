{
  "include": ["./index.ts"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "esnext",
    "outFile": "dist/index.d.ts",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}

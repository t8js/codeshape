{
  "name": "codeshape",
  "version": "2.3.14",
  "description": "Code checking utility: typecheck + lint + format",
  "bin": {
    "codeshape": "dist/run.js"
  },
  "scripts": {
    "build": "npx npm-run-all clean build-bin build-config",
    "build-bin": "npx esbuild ./src/run.ts --bundle --outdir=dist --platform=node",
    "build-config": "node -e \"require('node:fs').cpSync('src/_biome.json', 'dist/_biome.json');\"",
    "clean": "node -e \"require('node:fs').rmSync('dist', { force: true, recursive: true });\"",
    "prepublishOnly": "npm run build",
    "preversion": "npx npm-run-all shape build",
    "shape": "node dist/run.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t8js/codeshape.git"
  },
  "keywords": [
    "code style",
    "lint"
  ],
  "author": "axtk",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "22.15.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251203.1"
  }
}
